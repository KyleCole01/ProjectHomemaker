<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_list_layout"
    android:layout_width="match_parent"
    android:layout_height="150sp">

    <ImageView
        android:id="@+id/list_item_image"
        android:layout_width="0sp"
        android:layout_height="100sp"
        android:layout_margin="20sp"
        android:src="@drawable/five_stars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20sp"
        android:text="placeholder title"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_image"
        app:layout_constraintEnd_toEndOf="@+id/list_item_image"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintStart_toStartOf="@+id/list_item_image"
        app:layout_constraintTop_toTopOf="@+id/list_item_image"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/list_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="30sp"
        android:text="Dinner"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/list_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toEndOf="@+id/list_item_title"
        app:layout_constraintTop_toTopOf="@id/list_item_title"
        android:layout_marginBottom="25sp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>